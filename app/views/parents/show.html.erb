<p id="notice"><%= notice %></p>

<h1>Welcome back <%= @parent.first_name %></h1>

<p>
  <strong>Name:</strong>
  <%= "#{@parent.first_name} #{@parent.last_name}" %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @parent.phone_number %>
</p>

<p>
  <strong>Email:</strong>
  <%= @parent.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= "#{@parent.address}, #{@parent.city}, #{@parent.state}, #{@parent.zip}" %>
</p>
<% @children.each do |child| %>
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= child.first_name %>
    </div>
    <div class="panel-body">
      <%= child.last_name %>
    </div>
  </div>
<% end %>
<%= link_to 'add a child', new_child_url(parent: @parent.id), class: "btn btn-danger", remote: true %>
<%= link_to 'Edit', edit_parent_path(@parent), class: "btn btn-warning" %>
