<h1>Listing parents</h1>

<table class="table">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.first_name %></td>
        <td><%= parent.last_name %></td>
        <td><%= parent.phone_number %></td>
        <td><%= parent.email %></td>
        <td><%= "#{parent.address}, #{parent.city}, #{parent.state}, #{parent.zip}" %></td>
        <td><%= link_to 'show'.html_safe, parent_url(parent) %></td>
        <td><%= link_to '<i class="icon-edit-sign"></i>'.html_safe, edit_parent_url(parent) %></td>
        <td><%= link_to '<i class="icon-trash"></i>'.html_safe, parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Parent', new_parent_path, class: "btn btn-primary" %>
