<!DOCTYPE html>
<html>
<head>
  <title>Kids360</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Kids360", root_url, class: "navbar-brand active" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav navbar-right">
<!--           <li><#%= link_to "Parents", parents_url %></li>
          <li><#%= link_to "Children", children_url %></li>
          <li><#%= link_to "Organizations", organizations_url %></li> -->
          <% if current_parent.present? %>
            <li><%= link_to "My Account", parent_url(current_parent) %></li>
            <li><%= link_to "Log Out", sessions_url, method: :delete %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_parent_url %></li>
            <li><%= link_to "Log In", new_session_url %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>

  <div class="container">

    <%= render 'layouts/flash' %>
    <%= yield %>
  </div>
<%= render 'layouts/footer' %>
<%= render 'layouts/google_analytics' %>
</body>
</html>
