$('#myModal').modal('hide');
var child = $('<%= j(render 'parents/child_block', the_child: @child) %>');
$('#child_id-<%= @child.id %>').replaceWith(child);
setTimeout(function() {
  var modal = $('<%= j(render 'add_doctor_modal', child: @child) %>');
  $('#myModal').replaceWith(modal);
  $('#myModal').modal();
}, 1000);
setTimeout(function() {
  var notice = $('<div><%= j(render 'layouts/flash') %></div>');
  notice.hide();
  $('.modal-body h4').before(notice);
  notice.slideDown();
}, 2000);


