$('#new_child').slideUp(1000)
setTimeout(function() { $('#new_child').remove(); }, 5000);
var child_block = $('<%= j(render 'parents/child_block', the_child: @child) %>')
child_block.hide();
$('.row').append(child_block)
setTimeout(function() { child_block.slideDown(); }, 1000);
var notice = $('<div><%= j(render 'layouts/flash') %></div>');
notice.css("display", "none");
$('#notice').replaceWith(notice);
setTimeout(function() { notice.slideDown(); }, 1000);
