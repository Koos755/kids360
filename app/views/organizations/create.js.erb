var flash = $('<%= j(render 'layouts/flash') %>');
flash.hide();
$('.modal-body h4').before(flash);
flash.slideDown();
var new_organization = $('<%= j(render 'children/authorization', authorization: @authorization, the_child: @authorization.child) %>');
new_organization.hide();
$('form.form-inline').before(new_organization);
new_organization.slideDown();
$('#child_id-<%= @authorization.child_id %>').replaceWith('<%= j(render 'parents/child_block', the_child: @authorization.child) %>');
$('.form-inline').slideUp();
setTimeout(function() { $('.form-inline').remove(); }, 1500);
$('#click_to_add').show();
